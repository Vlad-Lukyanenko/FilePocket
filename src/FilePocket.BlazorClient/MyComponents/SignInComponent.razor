<section>
    <div class="container">
        <div class="card border-light-subtle shadow-sm">
            <div class="row g-0 justify-content-around">
                <!-- Image Column -->
                <div class="col-12 col-md-6">
                    <img class="img-fluid rounded-start w-90 h-90 pt-5 ps-2" loading="lazy" src="./assets/img/sign-in.png" alt="Sign-in illustration">
                </div>

                <!-- Form Column -->
                <div class="col-12 col-md-4">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-5">
                                    <h3>Sign-in</h3>
                                </div>
                            </div>
                        </div>

                        <!-- Sign-in Form -->
                        <EditForm Model="@_loginModel" OnSubmit="@FormSubmitted" style="text-align: left;">
                            <div class="row gy-3 gy-md-4 overflow-hidden">
                                <!-- Email Input -->
                                <div class="col-12">
                                    <label for="email" class="form-label">
                                        Email
                                        @if (showEmailError)
                                        {
                                            <span class="text-danger">*</span>
                                        }
                                    </label>
                                    <InputText @bind-Value="_loginModel.Email" 
                                        type="email"   
                                        class="form-control" 
                                        id="email" 
                                        placeholder="name@example.com" required 
                                        @onblur="ValidateEmail"
                                    />
                                    @if (showEmailError)
                                    {
                                        <div class="text-danger"
                                          style="font-size: small; "
                                        >
                                        Please fill out this field!
                                        </div>
                                    }
                                </div>

                                <!-- Password Input -->
                                <div class="col-12">
                                    <label for="password" class="form-label">
                                        Password
                                        @if (showPasswordError)
                                        {
                                            <span class="text-danger">*</span>
                                        }
                                    </label>
                                    <div class="input-group">
                                        <InputText @bind-Value="_loginModel.Password" 
                                            type="@passwordInputType" 
                                            class="form-control" 
                                            id="password" required 
                                            @onblur="ValidatePassword"
                                        />
                                        <button class="btn btn-outline-secondary" type="button" @onclick="TogglePassword"
                                        style="border: var(--bs-border-width, 1px) solid var(--bs-border-color, #6c757d);">
                                            <i class="@passwordIcon"></i>
                                        </button>
                                    </div>
                                    
                                    @if (showPasswordError)
                                    {
                                        <div class="text-danger"
                                          style="font-size: small; "
                                        >
                                        Please fill out this field!
                                        </div>
                                    }
                                </div>

                                <!-- Remember Me Checkbox -->
                                <div class="col-12">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" name="remember_me" id="remember_me">
                                        <label class="form-check-label text-secondary" for="remember_me">
                                            Keep me logged in
                                        </label>
                                    </div>
                                </div>

                                <!-- Submit Button -->
                                <div class="col-12">
                                    <div class="d-grid">
                                        <button class="btn btn-primary btn-lg" type="submit">Sign-in now</button>
                                    </div>
                                </div>
                            </div>
                        </EditForm>

                        <!-- Additional Links -->
                        <div class="row">
                            <div class="col-12">
                                <hr class="mt-4 mb-2 border-secondary-subtle">
                                <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-end">
                                    <a href="/sign-up" class="link-secondary text-decoration-none">Create new account</a>
                                    <a href="/forgot-password" class="link-secondary text-decoration-none">Forgot password</a>
                                </div>
                            </div>
                        </div>

                        <!-- Sign-in error -->
                        @if (_wrongEmailOrPassword)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert" style="margin-top:20px">
                                <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
                                    <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
                                        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                                    </symbol>
                                </svg>
                                <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill" /></svg>
                                Wrong email or password!
                                <button type="button" class="btn-close" aria-label="Close" onclick="@CloseErrorLine"></button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    private bool showEmailError = false;
    private bool showPasswordError = false;
    private bool isPasswordVisible = false;
    private string passwordInputType = "password";
    private string passwordIcon = "bi bi-eye";

    private void ValidateEmail()
    {
        showEmailError = string.IsNullOrWhiteSpace(_loginModel.Email);
    }

    private void ValidatePassword()
    {
        showPasswordError = string.IsNullOrWhiteSpace(_loginModel.Password);
    }

    private void TogglePassword()
    {
        isPasswordVisible = !isPasswordVisible;
        passwordInputType = isPasswordVisible ? "text" : "password";
        passwordIcon = isPasswordVisible ? "bi bi-eye-slash" : "bi bi-eye";
    }
}