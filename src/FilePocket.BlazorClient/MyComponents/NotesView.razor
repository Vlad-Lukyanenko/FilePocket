@using FilePocket.BlazorClient.Helpers
@using FilePocket.BlazorClient.Services.Files.Models
@using FilePocket.BlazorClient.Shared.Enums

<style>
    @@media (max-width: 768px) {
    .table-responsive {
    overflow-x: auto;
    }

    .table th, .table td {
    padding: 0.5rem;
    }

    .btn-outline-success, .btn-outline-warning, .btn-outline-danger {
    padding: 0.25rem 0.5rem;
    }

    .fs-4 {
    font-size: 1.5rem;
    }

    .w-md-75 {
    width: 100% !important;
    }

    .form-check-input {
    margin-right: 0.5rem;
    }

    .link-dark {
    font-size: 0.9rem;
    }
    }
</style>

<div class="container-fluid" style="min-height: 600px;">
    @{
        var notes = "Notes";
        var title = $"{notes}";
    }
    <!-- Top SubMenu -->
    <TopSubMenu Title="@title" ShowBackButton="false" />

    <!-- Action Buttons Row -->
    <div class="row">
        <div class="col-12 d-flex align-items-center mb-3">

            <!-- Create Or Edit Note Button -->
            <button class="btn btn-outline-primary py-0 px-2 me-2" @onclick="@OpenEditor">
                <i class="ps-2 pe-2 bi-file-earmark-plus fs-4"></i>
            </button>
        </div>
    </div>

    <br />

    <!-- Notes Table -->
    @if (_notes != null && !_notes.Any())
    {
        <div class="text-center no-content">
            <h6>It looks like you haven't uploaded or created any notes yet. <br /> Would you like to upload or create one now?</h6>
        </div>
    }
    else
    {
        <NotesBlock Notes="_notes" NoteRequests="NoteRequests" />
    }

</div>

