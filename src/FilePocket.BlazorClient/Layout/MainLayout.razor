@code {

    private async Task ShowRightOffcanvas()
    {
        await JS.InvokeVoidAsync("openRightOffcanvasMenu");
    }


    private List<StorageItem> StorageItems = new()
    {
        new StorageItem("Documents", 5, "#0000FF", "bi bi-folder"),
        new StorageItem("Books", 5, "#FF0000", "bi bi-book"),
        new StorageItem("Music", 5, "#008000", "bi bi-file-music"),
        new StorageItem("Pictures", 5, "#FFFF00", "bi bi-image"),
        new StorageItem("Videos", 5, "#FFA500", "bi bi-film"),
        new StorageItem("Other", 10, "#40E0D0", "bi bi-file-earmark"),
    };

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await Task.Delay(500); // Даем Blazor время отрендерить canvas
            await JS.InvokeVoidAsync("renderStorageChart");
        }
    }

    private class StorageItem
    {
        public string Name { get; }
        public int Size { get; }
        public string Color { get; }
        public string Icon { get; }

        public StorageItem(string name, int size, string color, string icon)
        {
            Name = name;
            Size = size;
            Color = color;
            Icon = icon;
        }
    }

} 

<script>

    function closeOffcanvasMenu() {
        const offcanvasMenu = document.getElementById('offcanvasMenu');
        if (offcanvasMenu) {
            const bsOffcanvas = bootstrap.Offcanvas.getInstance(offcanvasMenu);
            if (bsOffcanvas) {
                bsOffcanvas.hide();
            }
        }
    }

    function openRightOffcanvasMenu() {
    const offcanvasMenu = document.getElementById('rightOffcanvasMenu');

    if (!offcanvasMenu) {
        @* console.error("Элемент #rightOffcanvasMenu не найден!"); *@
        return;
    }

    const bsOffcanvas = new bootstrap.Offcanvas(offcanvasMenu);
    bsOffcanvas.show();
    }
    
    window.closeOffcanvasMenu = closeOffcanvasMenu;
    window.openRightOffcanvasMenu = openRightOffcanvasMenu;


function renderStorageChart() {
    @* console.log("renderStorageChart() вызван!"); *@

    var ctx = document.getElementById("storageChart");
    if (!ctx) {
        @* console.error("Canvas не найден!"); *@
        return;
    }

    ctx = ctx.getContext("2d");

    new Chart(ctx, {
        type: "doughnut",
        data: {
            labels: ["Documents", "Books", "Music", "Pictures", "Videos", "Other"],
            datasets: [{
                data: [5, 5, 5, 5, 5, 10],
                backgroundColor: ["#0000FF", "#FF0000", "#008000", "#FFFF00", "#FFA500", "#40E0D0"],
                borderWidth: 0
            }]
        },
        options: {
            responsive: false,
            cutout: "70%",
            plugins: {
                legend: { display: false }
            }
        }
    });
}

</Script>
