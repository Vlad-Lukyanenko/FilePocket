@page "/pockets/{PocketId:guid}/notes/new"
@page "/pockets/{PocketId:guid}/notes/{Id:guid}"
@page "/pockets/{PocketId:guid}/folders/{FolderId:guid}/notes/new"
@page "/pockets/{PocketId:guid}/folders/{FolderId:guid}/notes/{Id:guid}"
@using FilePocket.BlazorClient.Features.Notes
@using FilePocket.BlazorClient.Features.Notes.Models
@using FilePocket.BlazorClient.Features.Notes.Requests
@using FilePocket.BlazorClient.Features.Users.Requests
@using FilePocket.BlazorClient.Helpers
@using Microsoft.AspNetCore.Authorization


@attribute [Authorize]

<div class="container-fluid" style="min-height: 600px;">

    <!-- Top SubMenu -->
    <TopSubMenu Title="Note Editor" ShowBackButton="true" />

    @if (_note != null)
    {
        <div class="row">
            <div class="col-sm-5 d-flex align-items-center mb-3">
                @if (_editTitle)
                {
                    <div class="title-input-container">
                        <input type="text" class="form-control" aria-label="Note Title" @bind="_note.Title" @onblur="SaveTitle" @onkeypress="@InvokeSaveTitle" @onfocusout="SaveTitle">
                        <i class="bi bi-check2" @onclick="@SaveTitle"></i>
                    </div>
                }
                else
                {
                    <div class="title-text-container" @onclick="EditTile">
                        <span class="align-middle">@(Tools.TruncateString(_note?.Title!, 39))</span>
                    </div>
                }
            </div>
            <div class="col-sm-3 d-flex align-items-center mb-3" style="font-size: 0.75rem">
                <small>
                    <strong >Created: </strong>@_createdAt
                </small>
            </div>
            <div class="col-sm-3 d-flex align-items-center mb-3">
                <small>
                    <strong>Updated: </strong>@_updatedAt
                </small>
            </div>
            <div class="col-sm-1 d-flex align-items-center justify-content-end align-content-end mb-3">
                <button class="btn-close btn-close" aria-label="Close" @onclick="@CloseEditor" />
            </div>
        </div>
        <NotesEditor Content="@_note!.Content" OnSaveOrUpdate="ChangeNoteContent" />
    }
</div>

<style>
    .title-text-container {
        width: 100%;
        height: 38px;
        cursor: pointer;
        border: 1px solid #eeeeee;
        border-radius: 0.375rem;
        transition: all 0.5s;
        padding: 6px 12px;
    }


    .title-input-container {
        width: 100%;
        position: relative;
        font-style: italic;
    }

        .title-input-container>input{
            font-style: italic;
        }

    .title-input-container>i{
        position: absolute;
        right: 12px;
        top: calc(50% - 10px);
    }

</style>


